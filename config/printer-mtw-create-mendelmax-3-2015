# Klipper configuration for the MTW Create Printer 
# See the example.cfg file for a description of available parameters.
# This file contains common pin mappings for RAMBo boards. To use this
# config, the firmware should be compiled for the AVR atmega2560.

# Please note: The following edits are required before you can use this file:
# * Setting your serial port in the [mcu] block
# * Selecting the appropriate offsets for the BLTouch in the [bltouch] block

# Micro-controller information.
[mcu]
serial: 
#   The serial port to connect to the MCU. If unsure (or if it
#   changes) see the "Where's my serial port?" section of the FAQ. 

[stepper_x]
step_pin: PC0
dir_pin: !PL1
enable_pin: !PA7
step_distance: .01
endstop_pin: ^PB6
#endstop_pin: ^PA2
position_endstop: 0
position_min: -35
position_max: 250
homing_speed: 50

[stepper_y]
step_pin: PC1
dir_pin: PL0
enable_pin: !PA6
step_distance: .01
endstop_pin: ^PB5
#endstop_pin: ^PA1
position_endstop: 0
position_min: -5
position_max: 320
homing_speed: 50

[stepper_z]
step_pin: PC2
dir_pin: PL2
enable_pin: !PA5
step_distance: .00125
position_min: -2 
endstop_pin: probe:z_virtual_endstop
#endstop_pin: ^PC7
position_endstop: 0.5
position_max: 225

[extruder]
step_pin: PC3
dir_pin: !PL6
enable_pin: !PA4
heater_pin: PH6
sensor_pin: PF0
step_distance: .0102
nozzle_diameter: 0.400
filament_diameter: 1.750
sensor_type: ATC Semitec 104GT-2
control: pid
pid_Kp: 22.2
pid_Ki: 1.08
pid_Kd: 114
min_temp: 0
max_temp: 275

#Uncomment below for dual extruder printers
#[extruder1]
#step_pin: PC4
#dir_pin: PL7
#enable_pin: !PA3
#heater_pin: PH4
#sensor_pin: PF1
#step_distance: .0102
#nozzle_diameter: 0.400
#filament_diameter: 1.750
#sensor_type: ATC Semitec 104GT-2
#control: pid
#pid_Kp: 22.2
#pid_Ki: 1.08
#pid_Kd: 114
#min_temp: 0
#max_temp: 275

## Script to change back to the main extruder
[gcode_macro T0]
gcode:
    ACTIVATE_EXTRUDER EXTRUDER=extruder
    SET_GCODE_OFFSET X=0
    SET_GCODE_OFFSET Y=0


### Script to activate second extruder
[gcode_macro T1]
gcode:
    ACTIVATE_EXTRUDER EXTRUDER=extruder1
    SET_GCODE_OFFSET X=-33
    SET_GCODE_OFFSET Y=-.2

[heater_bed]
heater_pin: PE5
sensor_type: NTC 100K beta 3950
sensor_pin: PF2
control: watermark
min_temp: 0
max_temp: 130

# BLTouch probe. 
# See example-extras.cfg file for a description of available parameters.
[bltouch]
sensor_pin: PB4
control_pin: PL5
pin_move_time: 0.675
pin_up_reports_not_triggered: True
pin_up_touch_mode_reports_triggered: True
z_offset: 1.0
####   Uncomment the offset below for the MTW Create or MendelMax 3 with the Linear Rail Upgrade
#x_offset: 17
#y_offset: 37
###   Uncomment the offset below for the MendelMax 3 without the LRU.
#x_offset: 15
#y_offset: 30

[safe_z_home]
home_xy_position: 125,150
speed: 50
z_hop: 10
z_hop_speed: 5

# Mesh Bed Leveling 
# See example-extras.cfg file for a description of available parameters.
[bed_mesh]
speed: 50
horizontal_move_z: 5
#min_point: 5,5
mesh_min: 60, 40
#max_point: 225,265
mesh_max: 240,280
probe_count: 5,7
fade_start: 1.0
fade_end: 0.0
split_delta_z: .025
move_check_distance: 5.0
mesh_pps: 2,2
#algorithm: lagrange
algorithm: bicubic
bicubic_tension: .2

[fan]
pin: PH5


[heater_fan nozzle_cooling_fan]
pin: PH3

[printer]
kinematics: cartesian
max_velocity: 300
max_accel: 3000
max_z_velocity: 5
max_z_accel: 100

[ad5206 stepper_digipot]
enable_pin: PD7
# Scale the config so that the channel value can be specified in amps.
# (For Rambo v1.0d boards, use 1.56 instead.)
scale: 2.08
# Channel 1 is E0, 2 is E1, 3 is unused, 4 is Z, 5 is X, 6 is Y
channel_1: 1.34
channel_2: 1.0
channel_4: 1.1
channel_5: 1.1
channel_6: 1.1

# Enable 16 micro-steps on steppers X, Y, Z, E0, E1
[static_digital_output stepper_config]
pins:
    PG1, PG0,
    PK7, PG2,
    PK6, PK5,
    PK3, PK4,
    PK1, PK2

[static_digital_output yellow_led]
pins: !PB7

# Common EXP1 / EXP2 (display) pins
[board_pins]
aliases:
    # Common EXP1/EXP2 headers found on RAMBo v1.4
    EXP1_1=PE6, EXP1_3=PG3, EXP1_5=PJ2, EXP1_7=PJ7, EXP1_9=<GND>,
    EXP1_2=PE2, EXP1_4=PG4, EXP1_6=PJ3, EXP1_8=PJ4, EXP1_10=<5V>,
    # EXP2 header
    EXP2_1=PB3, EXP2_3=PJ5, EXP2_5=PJ6, EXP2_7=PD4, EXP2_9=<GND>,
    EXP2_2=PB1, EXP2_4=PB0, EXP2_6=PB2, EXP2_8=PE7, EXP2_10=PH2
    # Pins EXP2_1, EXP2_6, EXP2_2 are also MISO, MOSI, SCK of bus "spi"

# See the sample-lcd.cfg file for definitions of common LCD displays.
